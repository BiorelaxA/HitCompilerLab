{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug lab2",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lab2",  // 可执行文件路径
            "args": ["${workspaceFolder}/test/Lab2_test/test9.cmm","-g"],            // 调试时传入的参数（如测试文件）
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build-lab2",        // 调试前先执行构建任务
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"      // 根据系统调整路径（Windows 需指定 MinGW 路径）
        }
    ]
}